{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "lib": ["es6"],
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]
  },
  "include": ["./src/"]
}
